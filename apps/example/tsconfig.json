{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "rootDir": "src",
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"],
        "allowJs": true,
        "moduleResolution": "node16"
    }
}
