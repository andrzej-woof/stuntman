{
    "name": "@stuntman/stuntman",
    "version": "1.0.0",
    "description": "Stuntman - HTTP proxy / mock with API and client libraries",
    "private": true,
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/andrzej-woof/stuntman.git"
    },
    "homepage": "https://github.com/andrzej-woof/stuntman#readme",
    "scripts": {
        "start:example": "pnpm --filter @stuntman/example start",
        "test:example": "pnpm --filter @stuntman/example test:example",
        "test": "pnpm -r test",
        "clean": "pnpm -r clean",
        "build": "pnpm -r build",
        "lint": "pnpm -r lint",
        "lint:fix": "pnpm -r lint:fix",
        "prepublishOnly": "pnpm clean && pnpm lint:fix && pnpm build && pnpm test && pnpm test:example",
        "preinstall": "npx only-allow pnpm"
    },
    "keywords": [
        "proxy",
        "mock",
        "http",
        "https",
        "server",
        "api",
        "e2e",
        "development",
        "rest",
        "gql",
        "end-to-end",
        "testing",
        "qa",
        "automated-testing",
        "stub",
        "functional"
    ],
    "author": "Andrzej Pasterczyk",
    "license": "MIT",
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@prettier/plugin-pug": "3.3.0",
        "@types/node": "22.14.0",
        "@typescript-eslint/eslint-plugin": "8.29.0",
        "@typescript-eslint/parser": "8.29.0",
        "eslint": "9.23.0",
        "eslint-config-prettier": "10.1.1",
        "eslint-plugin-css": "0.11.0",
        "eslint-plugin-jsdoc": "50.6.9",
        "eslint-plugin-pug": "1.2.5",
        "jest": "^29.7.0",
        "nodemon": "3.1.9",
        "prettier": "3.5.3",
        "ts-node": "10.9.2",
        "tsc-alias": "^1.8.16",
        "typescript": "^5.9.3"
    },
    "files": [
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ]
}
